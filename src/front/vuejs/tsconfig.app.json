{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/types/*.d.ts", "src/**/*", "src/**/*.vue", "tests/**/*"],
  "exclude": ["src/**/__tests__/*", "tests/**/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./tests/*"]
    },
  }
}
